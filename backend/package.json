{
  "name": "mega-invest-backend",
  "version": "1.0.0",
  "description": "Backend API for MegaInvest Platform",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc --project tsconfig.build.json",
    "start": "node dist/server.js",
    "db:test": "tsx src/database/test-connection.ts",
    "db:setup": "tsx src/database/setup.ts",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:seed": "tsx src/database/seed.ts",
    "db:init": "npm run db:setup && npm run db:migrate && npm run db:seed"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.14.1",
    "uuid": "^11.0.3",
    "zod": "^3.24.1",
    "nodemailer": "^6.9.13",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.14.0",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "@types/nodemailer": "^6.4.13",
    "@types/multer": "^1.4.7"
  },
  "keywords": [
    "investment",
    "platform",
    "api",
    "backend"
  ],
  "author": "MegaInvest Team",
  "license": "MIT"
}
