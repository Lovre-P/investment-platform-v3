# Database Configuration
DATABASE_URL=mysql://username:password@localhost:3306/megainvest_db
DB_HOST=localhost
DB_PORT=3306
DB_NAME=megainvest_db
DB_USER=username
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload (if implementing file uploads)
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Email Configuration
# Admin email for receiving notifications
ADMIN_EMAIL=info@mega-invest.hr
# From email address for outgoing emails
FROM_EMAIL=noreply@mega-invest.hr

# Email Service Provider Configuration
# Choose one of the following email service configurations:

# Option 1: SendGrid (Recommended for production)
# SENDGRID_API_KEY=your-sendgrid-api-key-here
# EMAIL_SERVICE=sendgrid

# Option 2: SMTP Server (Exchange, Gmail, etc.)
# SMTP_HOST=smtp.office365.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@yourdomain.com
# SMTP_PASS=your-email-password-or-app-password
# EMAIL_SERVICE=smtp

# Option 3: AWS SES
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# EMAIL_SERVICE=ses

# Option 4: Mailgun
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=your-mailgun-domain
# EMAIL_SERVICE=mailgun

# Email Templates Configuration
EMAIL_TEMPLATE_LOGO_URL=https://your-domain.com/logo.png
EMAIL_TEMPLATE_COMPANY_NAME=MegaInvest Platform
EMAIL_TEMPLATE_SUPPORT_EMAIL=support@mega-invest.hr
EMAIL_TEMPLATE_COMPANY_ADDRESS=Your Company Address
